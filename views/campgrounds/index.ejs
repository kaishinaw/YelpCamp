<% include ../partials/header %>

<div class="container">
  <header class="jumbotron">
    <h1>Welcome to YelpCamp!</h1>
    <p>Campgrounds from around the world</p>
    <p>
      <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add new campground</a>
    </p>
  </header>
  
  <div class="row text-center" >
    <% campgrounds.forEach(function(campground) { %>
      <div class="col-md-3 col-sm-6">
         <div class="card">
           <img src="<%= campground.image %>" alt="<%= campground.name %>" class="img-fluid" style="max-height:150px; overflow:hidden">
           <div class="caption">
             <h4><%= campground.name %></h4>
           </div>
            <p>
              <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More info</a>
            </p>
         </div>
      </div>
    <% }); %>
  </div>


</div>

<% include ../partials/footer %>